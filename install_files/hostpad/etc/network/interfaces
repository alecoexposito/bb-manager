source /etc/network/interfaces.d/*

allow-hotplug eth0
no-auto-down eth0
iface eth0 inet static
address 0
netmask 255.255.255.0
gateway 192.168.1.254
dns-nameservers 8.8.8.8

allow-hotplug wlan0
iface wlan0 inet static
address 192.168.3.1
netmask 255.255.255.0

up iptables-restore < /etc/iptables.ipv4.nat
